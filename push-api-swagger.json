{
  "swagger": "2.0",
  "paths": {
    "/gateway/event": {
      "post": {
        "tags": [
          "Events"
        ],
        "summary": "Send Event",
        "description": "https://github.com/PortCallOptimisation/port-call-event-format/blob/master/Event_spec.ts",
        "operationId": "event",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "event",
            "description": "Event to send",
            "required": true,
            "schema": {
              "$ref": "https://raw.githubusercontent.com/PortCallOptimisation/port-call-event-format/master/Event_schema.json"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Event is accepted and stored, or identical event was already received"
          },
          "400": {
            "description": "Message payload is malformed JSON or Event is invalid, e.g. missing fields.",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          },
          "401": {
            "description": "Username and password required or invalid"
          },
          "403": {
            "description": "User is not allowed to send event with this content",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    }
  },
  "produces": [
    "application/json"
  ],
  "consumes": [
    "application/json"
  ],
  "definitions": {
    "Error": {
      "type": "object",
      "required": [
        "msg"
      ],
      "properties": {
        "msg": {
          "type": "string",
          "example": "Error description"
        },
        "reasons": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/JsValue"
          }
        }
      },
      "description": "An Error message"
    },
    "JsValue": {
      "type": "object"
    },
    "Event": {
      "type": "object",
      "description": "An event"
    }
  },
  "info": {
    "description": "API to share events with PortXchange",
    "version": "3",
    "title": "PortXchange incoming push API"
  },
  "basePath": "/",
  "tags": [
    {
      "name": "Events"
    }
  ]
}
